<!------ Form -------->
<div style="width: 75%; margin: 0px auto;">
	<h2>Add new post</h2><br/>
	<form action="/newpost" method="post">
		<div class="form-group">
			  <label for="fname">Title:</label><br>
			  <input type="text" class="form-control" id="title" name="title" placeholder="Title" required><br/>
			  <label for="fname">Author:</label><br>
			  <input type="text" class="form-control" id="author" name="author" placeholder="Author" required><br/>
			  <label for="lname">Content:</label><br>
			  <textarea class="form-control" id="content" name="content" rows="4" cols="50" required>Enter your content here</textarea><br/>
			  <input type="submit" class="btn btn-primary" value="Submit">
		</div>
	</form>
</div>


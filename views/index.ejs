<!DOCTYPE html>
<html>
<head>
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  <link rel="stylesheet" type="text/css" href="/static/style.css">
</head>
<body>

<%- include('partials/nav'); %>
<div style="width: 75%; margin: 0px auto;">

<div style="background: #dbd163; color: white; padding: 7px;">
	<h3 style="display: inline;">All Posts</h3>
		<a style="display: inline;" class="btn btn-success float-right" href="/newpost">+New Post</a>
</div><br/>
<% if (datas !== null ) { %>
	<% datas.forEach(function(item){ %>
		<strong>Title:</strong> <%= item.title %><br/>
		<strong>Posted on:</strong> <%= item.date %><br/>
		<strong>Author:</strong> <%= item.author %><br/>
		<strong>Content:</strong> <%= item.content %><br/><br/>
		<a href="/editpost/<%= item.id %>" class="btn btn-primary">Edit</a>
		<a href="/deletepost/<%= item.id %>" class="btn btn-danger">Delete</a>
		<hr/>
	<% }); %>
<%} else { %>
	<p> No data found </p>
<% } %>

</div>

